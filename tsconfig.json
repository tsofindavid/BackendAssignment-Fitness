{
  "compileOnSave": false,
  "compilerOptions": {
    "typeRoots": ["src/types/*.d.ts"],
    "experimentalDecorators": true,
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "strict": false,
    "sourceMap": false,
    "moduleResolution": "node",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "lib": [
      "es2020",
      "DOM",
      "ESNext.String"
    ],
    "baseUrl": ".",
    "rootDirs": [
      "./src"
    ]
  }
}
